doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="RRRewear - A sustainable fashion platform for swapping pre-owned clothing")
    meta(name="keywords", content="sustainable fashion, clothing swap, circular fashion, eco-friendly")
    title RRRewear - Circular Fashion Movement
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="icon", type="image/png", href="https://via.placeholder.com/32x32")
  body
    .top-bar
      a.logo(href="/") RRRewear
      .category-nav
        a(href="/categories/women") Women
        a(href="/categories/men") Men
      .search-bar
        input(type="text", placeholder="Search...")
        i.fas.fa-search
      .nav-icons
        .notification-icon
          i.fas.fa-bell
          .notification-dropdown
            .notification-item
              p New swap request
              span.time 2 hours ago
            .notification-item
              p Your listing was viewed
              span.time 5 hours ago
        .menu-icon
          i.fas.fa-bars
          .menu-dropdown
            a(href="/profile") My Profile
            a(href="/closet") My Closet
            a(href="/wishlist") Wish List
            a(href="/swap-requests") Swap Requests
            a(href="/logout") Logout

    .container
      block content

    footer.footer
      .footer-content
        .footer-section
          h3 About RRRewear
          p Join our community of sustainable fashion enthusiasts. Swap clothes, reduce waste, and make a difference.
        
        .footer-section
          h3 Quick Links
          ul.footer-links
            li
              a(href="/browse") Browse Listings
        
      .footer-bottom
        p Â© 2025 RRRewear. All rights reserved.

    script(src="/js/main.js")
    script.
      // Toggle dropdowns
      document.querySelectorAll('.notification-icon, .menu-icon').forEach(icon => {
        icon.addEventListener('click', function() {
          const dropdown = this.querySelector('.notification-dropdown, .menu-dropdown');
          dropdown.classList.toggle('show');
        });
      });

      // Close dropdowns when clicking outside
      document.addEventListener('click', function(event) {
        if (!event.target.closest('.nav-icons')) {
          document.querySelectorAll('.notification-dropdown, .menu-dropdown').forEach(dropdown => {
            dropdown.classList.remove('show');
          });
        }
      }); 