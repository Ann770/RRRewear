doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title RRRewear - #{title || 'Swap and Share'}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/home.css")
    link(rel="stylesheet", href="/css/swap-requests.css")
    link(rel="icon", type="image/png", href="https://via.placeholder.com/32x32")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/") RRRewear
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/products") Browse Items
            li.nav-item
              a.nav-link(href="/swap-requests") Swap Requests
          ul.navbar-nav
            if user
              li.nav-item
                a.nav-link(href="/profile") Profile
              li.nav-item
                a.nav-link(href="/logout") Logout
            else
              li.nav-item
                a.nav-link(href="/login") Login
              li.nav-item
                a.nav-link(href="/register") Register

    .container.mt-4
      if success_msg
        .alert.alert-success= success_msg
      if error_msg
        .alert.alert-danger= error_msg
      
      block content

    footer.footer.mt-5.py-3.bg-light
      .container.text-center
        p.mb-0 Â© 2024 RRRewear. All rights reserved.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    block scripts 