extends layout

block content
  .login-container
    .login-box
      h1 Register
      if error_msg
        .alert.alert-error #{error_msg}
      if success_msg
        .alert.alert-success #{success_msg}
      
      form.login-form(action="/register" method="POST")
        .form-group
          label(for="name") Full Name
          input#name(type="text" name="name" required)
        
        .form-group
          label(for="email") Email
          input#email(type="email" name="email" required)
        
        .form-group
          label(for="password") Password
          input#password(type="password" name="password" required)
        
        .form-group
          label(for="confirm_password") Confirm Password
          input#confirm_password(type="password" name="confirm_password" required)
        
        .form-group
          label(for="location") Location
          input#location(type="text" name="location" required)
        
        .form-group
          label(for="size") Size
          select#size(name="size" required)
            option(value="XS") XS
            option(value="S") S
            option(value="M") M
            option(value="L") L
            option(value="XL") XL
            option(value="XXL") XXL
        
        button.login-button(type="submit") Register
      
      .register-link
        p Already have an account? 
          a(href="/login") Login here 