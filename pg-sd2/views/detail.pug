doctype html
html
  head
    title Listing Detail
    link(rel="stylesheet", href="/statics/main.css")
  body
    header
      h1 #{listing.item_name}
      a(href="/") Home
    main
      img(src=listing.image_url, alt=listing.item_name)
      p Description: #{listing.description}
      p Category: #{listing.category}
      p Size: #{listing.size}
      p Owner: #{listing.owner_name}
      a(href="/swap_requests/request/" + listing.id, class="button") Request Swap
